// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}



// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String? // @db.Text
    access_token             String? // @db.Text
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String? // @db.Text
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid()) // UUID for security
  email         String    @unique              // Primary identifier
  emailVerified DateTime? // For email verification flow
  name          String?   // From social providers
  image         String?   // Profile picture URL
  role          UserRole  @default(STUDENT)    // Access control
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Social Login Relations
  accounts      Account[] // OAuth providers (Google, Facebook, etc.)
  sessions      Session[] // Active login sessions

  // Platform Relations
  responses     Response[] // User's test answers
  testSessions  TestSession[] // Test attempts
  subscriptions Subscription? // Premium features
  preferences   UserPreference? // User settings

  @@map("users")
}




// Subscription Model (for Premium Features)
model Subscription {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan        String   // "FREE", "PREMIUM", "AD_FREE"
  startDate   DateTime
  endDate     DateTime?
  isActive    Boolean  @default(false)
  paymentId   String?  // Payment gateway reference
  autoRenew   Boolean  @default(true)

  @@map("subscriptions")
}
model UserPreference {
  id               String   @id @default(cuid())
  userId           String   @unique
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  defaultSubject   String?  // e.g., "Physics"
  defaultDifficulty String? // "Easy", "Medium", "Hard"
  theme            String   @default("light") // UI theme
  language         String   @default("en")    // UI language
  notifications    Boolean  @default(true)    // Email notifications
  adPersonalization Boolean @default(true)    // AdSense personalization

  @@map("user_preferences")
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}
// Access Control Enum
enum UserRole {
  STUDENT
  ADMIN
  MODERATOR
}

// Test Session Model (for tracking test attempts)
model TestSession {
  id        Int      @id @default(autoincrement())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  testId    String   // Assuming a test identifier, adjust as needed
  startedAt DateTime @default(now())
  endedAt   DateTime?
  score     Int?

  @@map("test_sessions")
}

// Response Model (for user's answers to questions)
model Response {
  id         Int      @id @default(autoincrement())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionId String   // Assuming a question identifier, adjust as needed
  answer     String   // User's answer
  isCorrect  Boolean?
  createdAt  DateTime @default(now())

  @@map("responses")
}